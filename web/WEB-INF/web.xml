<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>Controller.UserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuctionController</servlet-name>
        <servlet-class>Controller.AuctionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoryController</servlet-name>
        <servlet-class>Controller.CategoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BidController</servlet-name>
        <servlet-class>Controller.BidController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/UserController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuctionController</servlet-name>
        <url-pattern>/AuctionController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryController</servlet-name>
        <url-pattern>/CategoryController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BidController</servlet-name>
        <url-pattern>/BidController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <env-entry>
        <env-entry-name>db-host</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>127.0.0.1</env-entry-value>
    </env-entry>
    <env-entry>
        <env-entry-name>db-port</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>3306</env-entry-value>
    </env-entry>
    <env-entry>
        <env-entry-name>db-database</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>auction</env-entry-value>
    </env-entry>
    <env-entry>
        <env-entry-name>db-username</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>root</env-entry-value>
    </env-entry>
    <env-entry>
        <env-entry-name>db-password</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>chunhuduc</env-entry-value>
    </env-entry>
    <context-param>
        <param-name>domain</param-name>
        <param-value>http://localhost:8084/OAS/</param-value>
    </context-param>
</web-app>
